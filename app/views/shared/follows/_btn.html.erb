<% if current_user != followed_user %>
  <% if followed_user.following?(current_user) %>
    <%= link_to 'フォローしない', user_destroy_follow_path(followed_user.id), method: :delete %>
  <% else %>
    <%= link_to 'フォロ-する', user_create_follow_path(followed_user.id), method: :post %>
  <% end %>
<% end %>
