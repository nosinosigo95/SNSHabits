<div class="comments">
  <h3 class="center-text">コメント</h3>
  <div class="comments-items">
    <% @comments.each do |comment| %>
      <ul class="comment">
        <% user = comment.user %>
        <li class="comment-user"><%= link_to comment.user.name, user_path(comment.user.id)%></li>
        <li class="comment-content"><%= comment.comment %></li>
      </ul>
    <% end %>
  </div>
  <div class="comment-form">
    <%= form_with url: habit_path(habit.id), method: :get do %>
      <%= text_area :comment, :content, class: "comment-text-area" %>
      <%= submit_tag "コメント作成" %>
    <% end %>
  </div>
</div>
