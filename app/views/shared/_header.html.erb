        <%= link_to root_path do %>
          <%= image_tag 'house.svg', class: "home-icon" %><span>Home
        <% end %>
      </li>
      <div class="height-border">
        <div class="height-border-inner"></div>
      </div>
      <li class="nav-item">
        <a class="" href="#">習慣</a>
