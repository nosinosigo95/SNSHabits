<div>
  <p><%= user.name %></p>
  <p><%= image_tag get_user_icon(user) %></p>
  <p><%= link_to "フォローする#{user.followers.count}", user_followers_path(user.id) %></p>
  <p><%= link_to "フォローされた#{user.followings.count}", user_followings_path(user.id) %></p>
  <div class="edit-follow">
    <% if current_user != user %>
      <%= render 'shared/follows/btn', followed_user: user %>
    <% else %>
      <%= link_to '編集',  edit_user_registration_path %>
    <% end %>
  </div>
</div>
