<div>
  <p><%= @user.name %></p>
  <p><%= image_tag get_user_icon(@user) %></p>
  <p><%= link_to "フォローする#{@user.followers.count}", user_followers_path(@user.id) %></p>
  <p><%= link_to "フォローされた#{@user.followings.count}", user_followings_path(@user.id) %></p>
  <div class="edit-follow">
    <% if current_user != @user %>
      <%= render 'shared/follows/btn', followed_user: @user %>
    <% else %>
      <%= link_to '編集',  edit_user_registration_path %>
    <% end %>
  </div>
</div>
<% if @followers.present? %>
  <%= render 'shared/users/index', users: @followers, displayed_user: @user %>
<% end %>
<% if @followings.present? %>
  <%= render 'shared/users/index', users: @followings, displayed_user: @user %>
<% end %>
<% if flash[:searched_result].present? %>
  <p><%= flash[:searched_result] %></p>
<% end%>
<h3 class="center-text">日記一覧(公開)</h3>
<div class="search-result">
  <div class="top-pagination">
    <%= paginate @diaries %>
  </div>
<% @diaries.each do |diary| %>
  <% if !diary.private %>
    <div class="card">
      <p class="card-item">実行日：<%= diary.action_date %></p>
      <p class="card-item">習慣名</p>
      <p class="card-content"><%= diary.habit.name %></p>
      <p class="card-item">内容</p>
      <p class="card-content"><%= diary.description %></p>
      <p class="card-item">実行時間</p>
      <p class="card-content"><%= diary.doing_time %></p>
    </div>
  <% end %>
<% end %>
  <div class="bottom-pagination">
    <%= paginate @diaries %>
  </div>
</div>
