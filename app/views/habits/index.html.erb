<h2 class="text-center">習慣検索</h2>
  <%= render 'shared/habits/index', habit_index: @habit_index %>
<h3 class="text-center">検索結果</h3>
<!--
ソートのプルダウン
-->
<div class="top-pagination">
  <%= paginate @habits %>
</div>
<div class="search-result-habits">
  <% @habits.each do |habit| %>
    <div class="card-habit">
      <p class="card-title"><%= link_to habit.name, habit_path(habit.id) %></p>
      <p class="card-item">効果</p>
      <p class="card-content">
        <%= habit.effect_habits.map(&:effect).pluck(:effect_item).join(',') %>
      </p>
      <% if habit.working_time.present? %>
        <p class="card-item">作業時間：</p>
        <p class="card-content">
          <%= habit.working_time %>
        </p>
      <% end %>
      <% if habit.period_for_effect.present? %>
        <p class="card-item">効果が出始める頃:</p>
        <p class="card-content">
          <%= habit.period_for_effect %>
        </p>
      <% end %>
      <a class="favorite-habit">
        <span class="star"></span>
        <span class="favorite-text">お気に入り</span>
      </a>
      <% if habit.user_id == current_user.id %>
        <%= link_to '編集', edit_habit_path(habit.id), class: "edit-habit" %>
      <% end %>
    </div>
  <% end %>
</div>
<div class="bottom-pagination">
  <%= paginate @habits %>
</div>
