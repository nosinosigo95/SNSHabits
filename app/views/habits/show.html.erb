<div class="habit-name-display">
  <p>習慣名:</p>
  <p><%= @habit.name %></p>
</div>
<div class="effect-display">
  <p>効果(キーワード):</p>
  <p><%= @habit.effect_habits.map(&:effect).pluck(:effect_item).join(',') %></p>
</div>
<% if @habit.period_for_effect.present? %>
  <div class="period_for_effect-display">
    <p>工夫:</p>
    <p><%= @habit.period_for_effect %></p>
  </div>
<% end %>
<% if @habit.working_time.present? %>
  <div class="working_time-display">
    <p>活動時間</p>
    <p><%= @habit.working_time %></p>
  </div>
<% end %>
<% if @habit.sources.present? %>
  <div class="source-display">
    <p>URL</p>
    <ul>
    <% @habit.sources.each do |source| %>
      <li><%= source.url %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="circumstance-display">
  <p>この習慣の状況</p>
  <p><%= get_circumstance(@habit) %></p>
</div>
